<div class="card-body">
    <div class="customer-avatar-section">
        <div class="d-flex align-items-center flex-column">
            <x-user-avatar />
            <div class="customer-info text-center">
                <h4 class="mb-1">@{{ user.name }}</h4>
                <small>ID #@{{ user.id }}</small>
            </div>
        </div>
    </div>
    <div class="d-flex justify-content-around flex-wrap my-4">
        <div class="d-flex align-items-center gap-2">
            <div class="avatar">
                <div class="avatar-initial rounded bg-label-primary">
                    <i class="ti ti-shopping-cart ti-md"></i>
                </div>
            </div>
            <div class="gap-0 d-flex flex-column">
                <p class="mb-0 fw-medium">{{ user.order_count }}</p>
                <small>Sipariş</small>
            </div>
        </div>
        <div class="d-flex align-items-center gap-2">
            <div class="avatar">
                <div class="avatar-initial rounded bg-label-primary">
                    <i class="ti ti-currency-dollar ti-md"></i>
                </div>
            </div>
            <div class="gap-0 d-flex flex-column">
                <p class="mb-0 fw-medium">{{ user.order_total }}</p>
                <small>Ciro</small>
            </div>
        </div>
    </div>

    <div class="info-container">
        <small class="d-block pt-4 border-top fw-normal text-uppercase text-muted my-3">Detaylar</small>
        <div class="row mb-3">
            <label for="html5-text-input" class="col-md-4 col-form-label">İsim</label>
            <div class="col-md-8">
                <input class="form-control" v-model="user.name"/>
            </div>
        </div>
        <div class="row mb-3">
            <label for="html5-text-input" class="col-md-4 col-form-label">Eposta</label>
            <div class="col-md-8">
                <input class="form-control" v-model="user.email"/>
            </div>
        </div>
        <div class="row mb-3">
            <label for="html5-text-input" class="col-md-4 col-form-label">Telefon</label>
            <div class="col-md-8">
                <input class="form-control" v-model="user.telephone"/>
            </div>
        </div>
        <div class="d-flex justify-content-end">
            <button @click="userSave" class="btn btn-primary me-3 waves-effect waves-light" >Kaydet</button>
        </div>
    </div>
</div>
