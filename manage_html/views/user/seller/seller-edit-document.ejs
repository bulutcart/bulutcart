<div class="card mb-4">
    <div class="card-header d-flex justify-content-between">
        <div class="card-title m-0 me-2">
            <h5 class="m-0 me-2">Belgeler</h5>
            <small class="text-muted">Mağaza tarafından gönderilen belgeler</small>

        </div>

    </div>
    <div class="card-body">
        <ul class="p-0 m-0">

            <li  v-for="(document, index) in user.documents" class="d-flex mb-3 pb-1 align-items-center">
                <div class="badge bg-label-primary me-3 rounded p-2">
                    <a href="@{{ document.url }}" target="_blank" ><i class="ti ti-wallet ti-sm"></i></a>
                </div>
                <div class="d-flex w-100 flex-wrap align-items-center justify-content-between gap-2">
                    <div class="me-2">
                        <h6 class="mb-0">{{ document.name }}</h6>
                        <small class="text-muted d-block">@{{ document.url }}</small>
                    </div>
                </div>
            </li>

        </ul>
    </div>
</div>
